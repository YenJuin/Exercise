#include<stdio.h>

int main(void)
{
	int i,j;
	int k = 0;
	int sum = 0;
	float average = 0;
	
	printf("Enter a number: "); //輸入一個整數 
	scanf("%d",&i);
	
	for(j=1;j<=i;j++){ //輸入i個整數 
		printf("Enter an integer ");
		scanf("%d",&k);
		sum = sum+k;
	}
	average = (float)sum/i;
	
	printf("The sum of integers:%d\n",sum);
	printf("The average of integers:%.2f",average);
}

#include <stdio.h>

int main(void)
{
	int hour;
	float wage;
	float salary1;
	float salary2;
	
	while(hour>=0){
		printf("Enter # of hours worked (-1 to end): \n");
		scanf("%d",&hour);
		printf("Enter hourly rate of the worker ($00.00): \n");
		scanf("%f",&wage);
		
		if(hour<=40){
			salary1=hour*wage;
			printf("Salary is %.2f\n",salary1);
		}
		else{
			salary2=hour*wage*1.5;
			printf("Salary is %.2f\n",salary2);
		}
	}
}
